<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.poka.mapper.GradeAttachMapper">

	<insert id="insert">
		INSERT INTO p_gradeattach 
		VALUES(#{uuid}, #{uploadPath}, #{fileName}, #{fileType}, #{grade_code} )
    </insert>
    
    <select id="getOldFiles" resultType="com.poka.domain.GradeAttachVO">
        SELECT * 
        FROM   p_gradeattach 
        WHERE  uploadpath = TO_CHAR(SYSDATE - 1, 'yyyy\mm\dd') 
    </select>
    
    <delete id="delete">
		DELETE p_gradeattach WHERE uuid = #{uuid}
	</delete>
	
	<select id="findByBno" resultType="com.poka.domain.GradeAttachVO">
        SELECT * FROM p_gradeattach WHERE grade_code = #{grade_code}
    </select>
    
</mapper>







