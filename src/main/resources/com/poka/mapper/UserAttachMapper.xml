<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.poka.mapper.UserAttachMapper">

	<insert id="insert">
		INSERT INTO p_memberattach 
		VALUES(#{uuid}, #{uploadPath}, #{fileName}, #{fileType}, #{userid} )
    </insert>
    
    <select id="getOldFiles" resultType="com.poka.domain.UserAttachVO">
        SELECT * 
        FROM   p_memberattach 
        WHERE  uploadpath = TO_CHAR(SYSDATE - 1, 'yyyy\mm\dd') 
    </select>
    
    <delete id="delete">
		DELETE p_memberattach WHERE uuid = #{uuid}
	</delete>
	
	<select id="findByBno" resultType="com.poka.domain.UserAttachVO">
        SELECT * FROM p_memberattach WHERE userid = #{userid}
    </select>
    
</mapper>







