<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.poka.mapper.NijiAttachMapper">


	<select id="getOldFiles" resultType="com.poka.domain.NijiAttachVO">
        SELECT * 
        FROM   p_Nijiattach 
        WHERE  uploadpath = TO_CHAR(SYSDATE - 1, 'yyyy\mm\dd') 
    </select>
    
	<delete id="deleteAll">
		DELETE p_Nijiattach WHERE pno = #{pno}
	</delete>
	
	<delete id="delete">
		DELETE p_Nijiattach WHERE uuid = #{uuid}
	</delete>

	<select id="findByBno" resultType="com.poka.domain.NijiAttachVO">
        SELECT * FROM p_Nijiattach WHERE nno = #{nno}
    </select>

	<insert id="insert">
		INSERT INTO p_Nijiattach 
		VALUES(#{uuid}, #{uploadPath}, #{fileName}, #{fileType}, #{pno} )
    </insert>
    
    
    
</mapper>







