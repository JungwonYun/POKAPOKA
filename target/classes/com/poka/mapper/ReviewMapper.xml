<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.poka.mapper.ReviewMapper">
	<!-- 리뷰 리스트 -->
	<select id="getList" resultType="com.poka.domain.ReviewVO">
		SELECT * FROM P_REVIEW WHERE gno = #{gno}
	</select>
	<!-- 단일 리뷰 -->
	<select id="read" resultType="com.poka.domain.ReviewVO">
		SELECT * FROM P_REVIEW WHERE rno = #{rno}
	</select>
	<!-- 리뷰 작성 -->
	<insert id="insert">
		INSERT INTO P_REVIEW(rno, content, writer, gno, score, regDate)
		 VALUES('R'||seq_REVIEW.NEXTVAL, #{content}, #{writer}, #{gno}, #{score}, DEFAULT)
	</insert>
	<!-- 리뷰 수정 -->
	<update id="update">
		UPDATE P_REVIEW SET content = #{content}, writer = #{writer}, updateDate=SYSDATE
		 WHERE rno=#{rno)
	</update>
	<!-- 리뷰 삭제 -->
	<delete id="delete">
		DELETE P_REVIEW WHERE rno = #{rno}
	</delete>
</mapper>